{
	"compilerOptions": {
		"noEmit": true,
		"outDir": "build",
		"strict": true,
		"target": "ES5",
		"module": "CommonJS",
		"moduleResolution": "node",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"jsx": "react",
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
